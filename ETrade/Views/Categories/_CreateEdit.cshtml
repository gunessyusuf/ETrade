@model Category

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="Id" type="hidden" />
            @*@Html.HiddenFor(m => m.Id)*@

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Save Category" class="btn btn-info" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-info">Clear</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index">Back to Category List</a>
                </div>
            </div>
        }
    </div>
</div>


